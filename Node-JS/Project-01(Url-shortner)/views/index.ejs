<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Shortner</title>
  </head>
  <body>
    <h1>Url Shortner</h1>
    <form method="POST" action="createUrl">
      <label for="input-box">Enter the URL: </label>
      <input name="url" type="text" placeholder="https://example.com/" />
      <button type="submit">Submit</button>
    </form>
    <% if (locals.id) { %>
    <p>Your Short ID is <%= locals.id %></p>
    <% } %>
    <table>
      <thead>
        <tr>
          <th>Sr No</th>
          <th>Url</th>
          <th>Short Url</th>
          <th>Total Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= url.redirectUrl %></td>
          <td><%= url.shortID %></td>
          <td><%= url.totalClicks.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
